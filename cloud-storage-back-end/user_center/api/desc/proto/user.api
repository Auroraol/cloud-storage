	}
)

type (
	RefreshAuthRequest {
	}
	RefreshAuthResponse {
		AccessToken string `json:"accesssToken"`
		AccessExpire int64 `json:"accessExpire"`
		RefreshAfter int64 `json:"refreshAfter"`
	}
)

type (
